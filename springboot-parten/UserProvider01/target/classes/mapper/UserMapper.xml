<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper  namespace="com.jbt.dao.UserDao">

    <insert id="addUser" parameterType="com.jbt.bean.User">
        insert into user(name,age) values(#{name},#{age})
    </insert>
    <update id="updateUser">
        update user set name=#{user.name},age=#{user.age} where id=#{id}
    </update>
    <delete id="deleteUser" parameterType="java.lang.Integer">
        delete from user where id=#{id}
    </delete>


    <select id="findAll"  resultType="com.jbt.bean.User">
        select * from user
    </select>

    <select id="findOne" parameterType="java.lang.Integer" resultType="com.jbt.bean.User">
        select * from user where id=#{id}
    </select>

</mapper>
